

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

      <fragment
          android:id="@+id/circle_image"
          android:layout_width="150dp"
          android:layout_height="200dp"
          android:layout_alignBottom="@+id/circle_formula"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          class="org.coep.geometryisfun.CircleImage" >
 </fragment>

      <fragment
          android:id="@+id/circle_formula"
          android:layout_width="150dp"
          android:layout_height="200dp"
          android:layout_above="@+id/button1"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@+id/circle_image"
          class="org.coep.geometryisfun.CircleFormula" >
 </fragment>

      <fragment
          android:id="@+id/circle_calculation"
          android:layout_width="143dp"
          android:layout_height="227dp"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          class="org.coep.geometryisfun.CircleCalculations" >
 </fragment>

      <Button
          android:id="@+id/button1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="100dp"
          
          android:layout_above="@+id/circle_calculation"
          android:layout_alignParentLeft="true"
          android:gravity="center"
          android:onClick="callCircleConcepts"
          android:text="@string/getConcepts" />
      
</RelativeLayout>
